{
  "openapi": "3.0.0",
  "info": {
    "title": "API TopUpGames - CRUD Users",
    "version": "1.0.0",
    "description": "Dokumentasi API TopUpGames dengan CRUD dan Security"
  },
  "servers": [{ "url": "http://localhost:3000" }],
  "components": {
    "securitySchemes": { "bearerAuth": { "type": "http", "scheme": "bearer" } }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/users": {
      "get": {
        "summary": "Ambil semua user",
        "responses": { "200": { "description": "OK" } }
      },
      "post": {
        "summary": "Tambah user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string" } }
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Ambil user berdasarkan ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": { "200": { "description": "OK" } }
      },
      "put": {
        "summary": "Ubah data user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string" } }
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      },
      "delete": {
        "summary": "Hapus user",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": { "200": { "description": "Deleted" } }
      }
    }
  },
  "tags": []
}
